{
  "name": "Python API with PostgreSQL",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.formatting.provider": "black"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "GitHub.copilot",
        "ms-python.black-formatter",
        "ms-python.isort"
      ]
    }
  },
  
  "postCreateCommand": "uv sync && uv pip install -e '.[postgres]' && uv tool install llm && llm install llm-github-models && llm models default github/gpt-4o && echo 'Testing database connection...' && sleep 5 && psql postgresql://postgres:postgres@db/calculator_db -c 'SELECT version();' || echo 'Database not ready yet - will be available shortly'",
  "forwardPorts": [8000, 5432],
  
  "containerEnv": {
    "PYTHONPATH": "/workspaces/${localWorkspaceFolderBasename}",
    "DATABASE_URL": "postgresql+psycopg://postgres:postgres@db/calculator_db"
  }
}